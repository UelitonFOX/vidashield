# Configurações do Backend VidaShield
# Copie este arquivo para .env e preencha com suas configurações

# Segurança (IMPORTANTE: Gere chaves aleatórias para produção)
SECRET_KEY=dev-key-change-in-production
JWT_SECRET_KEY=jwt-dev-key-change-in-production

# Banco de Dados
# Para desenvolvimento local com SQLite (padrão):
DATABASE_URL=sqlite:///app.db
# Para PostgreSQL/Supabase:
# DATABASE_URL=postgresql://postgres:[SUA-SENHA]@[SEU-HOST].supabase.co:5432/postgres

# Supabase (opcional, apenas se usar Supabase)
SUPABASE_URL=https://[SEU-PROJETO].supabase.co
SUPABASE_KEY=[SUA-API-KEY]

# URLs do Sistema
FRONTEND_URL=http://localhost:3001
RENDER_EXTERNAL_URL=http://localhost:5000

# Auth0 (opcional)
AUTH0_DOMAIN=dev-xxxxxxxx.us.auth0.com
AUTH0_AUDIENCE=https://vidashield.onrender.com/api
AUTH0_CLIENT_ID=
AUTH0_CLIENT_SECRET=
AUTH0_CALLBACK_URL=http://localhost:3001/auth/callback

# OAuth - Google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/google/callback

# OAuth - GitHub
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# hCaptcha (chaves de teste para desenvolvimento)
HCAPTCHA_SITE_KEY=10000000-ffff-ffff-ffff-000000000001
HCAPTCHA_SECRET_KEY=0x0000000000000000000000000000000000000000

# Email (opcional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=

# Configurações de Desenvolvimento
FLASK_ENV=development
FLASK_DEBUG=True
PORT=5000
